<h1><%= @items.first.category.titleize %></h1>
<div class="main-container">
	<div class="row">
		<% @items.each do |item| %>
			<div class="col">
					<div class="card" style="width: 18rem;">
						<%= image_tag (item.picture), class:"card-img-top" %>
					  <div class="card-body">
					    <h5 class="card-title"><%= item.name %></h5>
					    <p class="card-text">$<%= item.price %></p>
					    <div class="form-row">
						    <div class="col">Qty:</div>
						  </div>
						  <div class="form-row">
						    <div class="col">
						    	<%= form_with scope: :cart,  :url => add_cart_path, local: true  do |f| %>
								    	<%= f.hidden_field :table_id, :value => session[:table] %>
								    	<%= f.hidden_field :item_id, :value => item.id %>
								    	<%= f.select :item_quantity, (0..10), class:"form-control" %>
								</div>
						    <div class="col">
									    <%= f.submit "Submit", class: "btn btn-outline-primary" %>
								</div>
							</div>
									<% end %>
				    </div>
				  </div>
				</div>
		<% end %>
	</div>
</div>