<table>
  <tr>
  	<th>Item</th>
    <th>Qty</th>
    <th>Price</th>
    <th></th>
  </tr>

  <% @carts.each do |cart| %>
    <tr>
    	  <td><%= cart.item.name %></td>
        <td><%= cart.item_quantity %></td>
        <td><%= cart.item.price * cart.item_quantity %></td>
        <td><%= link_to 'Destroy', carts_path(cart),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>


</table>