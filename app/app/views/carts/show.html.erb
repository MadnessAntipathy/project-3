<h1>All Orders for Table <%= @table.id %></h1>
<% tablesubtotal = 0 %>
<% gst = 0 %>
<% tabletotal = 0 %>

<table class="table table-striped">
	<% @table.orders.each do |order| %>
		<tr>
	    <td scope="row">
			  <p><i>Order ID: <%= order.id %></i></p>
			  <% order.items.each do |item| %>
			    <h6><%= item.name %></h6>
			    <p><b>Item Price:</b> $<%= item.price %></p>
			    <% @purchases.where(order_id: order.id, item_id: item.id).each do |x| %>
			     <p><b>Quantity:</b> <%= x.item_quantity %></p>
			     <p><b>Subtotal for this dish:</b> $<%= item.price * x.item_quantity %></p>
			     <% tablesubtotal += item.price * x.item_quantity %>
			     <% end %>
			  <% end %>
	  	</td>
	  </tr>
	<% end %>

	<hr />
	<tr>
	  <td scope="row">
			<p><b>Subtotal for this table:</b> $<%= '%.2f' % tablesubtotal %></p>
			<% gst = tablesubtotal * 0.07 %>
			<p><b>GST:</b> $<%= '%.2f' % gst %></p>
			<% tabletotal = tablesubtotal + gst %>
			<h5><b>Total for this table: $<%= '%.2f' % tabletotal %></b></h5>
		</td>
	</tr>
</table>

<%= link_to 'Back', items_path, class:"btn btn-secondary" %>