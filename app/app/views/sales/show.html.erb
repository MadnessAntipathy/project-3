<div class="container">

	<div class="row">
		<div class="col-12">
			<h2>Transaction ID: <%= @sale.id %></h2>
			<h5><%= @sale.created_at.strftime("%d %b %Y  %I:%M %p") %></h5>
		</div>
	</div>

	<table class="table">
		<thead class="thead-dark">
			<tr class="row">
				<th class="col-7">Item</th>
				<th class="col-2">Unit Price</th>
				<th class="col-1">Qty</th>
				<th class="col-2">Total</th>
			</tr>
		</thead>

		<tbody>
		<% @orders.each do |order| %>
			<% order.items.each do |item| %>
			<tr class="row">
				<td class="col-7"><%= item.name  %></td>
				<td class="col-2">$<%= '%.2f' % (item.price * @purchases.find_by(order_id: order.id, item_id: item.id).item_quantity) %></td>
				<td class="col-1">x<%= @purchases.find_by(order_id: order.id, item_id: item.id).item_quantity  %></td>
				<td class="col-2">$<%= '%.2f' % item.price %></td>
			<% end %>
			</tr>
		<% end %>

			<tr class="row table-secondary">
		  	<td class="col-10 "><b>Subtotal:</b> </td>
		  	<td class="col-2"><b>$<%= '%.2f' % @sum %></b></td>
		  </tr>
		  <tr class="row table-secondary table-borderless">
		  	<td class="col-10"><% gst = @sum * 0.07 %><b>GST:</b></td>
				<td class="col-2"><b>$<%= '%.2f' % gst %></b></td>
			</tr>
			<tr class="row table-secondary">
				<td class="col-10"><% transactionamount = @sum + gst %><h5><b>Total:</b></h5></td>
				<td class="col-2"><h5><b> $<%= '%.2f' % transactionamount %></b></h5></td>
			</tr>

		</tbody>
	</table>

	<div class="row">
		<div class="col-12 text-center">
			<a class="btn btn-secondary btn-sm" href=<%=reports_path%>>Back to Transactions</a>
		</div>
	</div>

</div>